{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroups_ci_user_service_name": {
      "defaultValue": "ci-user-service",
      "type": "String"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2023-05-01",
      "name": "[parameters('containerGroups_ci_user_service_name')]",
      "location": "polandcentral",
      "tags": {
        "app": "user-service",
        "parent-app": "rental-app"
      },
      "properties": {
        "sku": "Standard",
        "containers": [
          {
            "name": "[parameters('containerGroups_ci_user_service_name')]",
            "properties": {
              "image": "amaliastefanescu/user-service:latest",
              "ports": [
                {
                  "protocol": "TCP",
                  "port": 80
                },
                {
                  "protocol": "TCP",
                  "port": 443
                },
                {
                  "protocol": "TCP",
                  "port": 8082
                }
              ],
              "environmentVariables": [
                {
                  "name": "SPRING_PROFILES_ACTIVE",
                  "value": "prod"
                }
              ],
              "resources": {
                "requests": {
                  "memoryInGB": 1.5,
                  "cpu": 1
                }
              }
            }
          }
        ],
        "initContainers": [],
        "restartPolicy": "Never",
        "ipAddress": {
          "ports": [
            {
              "protocol": "TCP",
              "port": 80
            },
            {
              "protocol": "TCP",
              "port": 443
            },
            {
              "protocol": "TCP",
              "port": 8082
            }
          ],
          "ip": "20.215.133.155",
          "type": "Public",
          "dnsNameLabel": "user-service",
          "autoGeneratedDomainNameLabelScope": "ResourceGroupReuse"
        },
        "osType": "Linux"
      }
    }
  ]
}
